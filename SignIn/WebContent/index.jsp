<%@ page pageEncoding="utf-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>Sign In</title>

</head>
<body>
	<form action="" id="form"
		style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
		<table style="border-spacing: 10px">
			<tr>
				<td colspan="5">
					<p style="margin: 0">Bạn cần kích hoạt tài khoản qua Email sau
						khi đăng ký để nhận ngay 50 ePoints thưởng từ TaiLieu.VN</p>
				</td>
			</tr>
			<tr>
				<td><input type="text" placeholder="Nhập Username"
					style="width: 320px; height: 20px; padding-left: 5px;"></td>
				<td colspan="4"><input type="text" placeholder="Nhập Họ và Tên"
					style="width: 320px; height: 20px; padding-left: 5px;"></td>
			</tr>
			<tr>
				<td><input type="text" placeholder="Nhập mật khẩu"
					style="width: 320px; height: 20px; padding-left: 5px;"></td>
				<td><select style="width: 75px; height: 25px;">
						<option>Giới tính</option>
				</select></td>
				<td colspan="3"></td>
			</tr>
			<tr>
				<td><input type="text" placeholder="Nhập lại mật khẩu"
					style="width: 320px; height: 20px; padding-left: 5px;"></td>
				<td><select style="width: 75px; height: 25px;">
						<option>Ngày sinh</option>
				</select></td>
				<td><select style="width: 75px; height: 25px;">
						<option>Tháng</option>
				</select></td>
				<td><select style="width: 75px; height: 25px;">
						<option>Năm</option>
				</select></td>
				<td width="75px"></td>
			</tr>
			<tr>
				<td><input type="text" placeholder="Nhập địa chỉ Email"
					style="width: 320px; height: 20px; padding-left: 5px;"></td>
				<td><select style="width: 75px; height: 25px;">
						<option>Tỉnh/TP</option>
				</select></td>
				<td colspan="3"></td>
			</tr>
			<tr>
				<td><input type="text" placeholder="Nhập lại địa chỉ Email"
					style="width: 320px; height: 20px; padding-left: 5px;"></td>
				<td colspan="4"><input type="text"
					placeholder="Nhập mã xác nhận"
					style="width: 120px; height: 20px; padding-left: 5px;"></td>
			</tr>
			<tr>
				<td colspan="5" style="padding-top: 30px"><input type="submit"
					value="Đăng ký"
					style="height: 35px; width: 80px; background-color: #2E9AFE; color: #fff; outline: none; border: none; border-radius: 5px;">
					<input type="checkbox"> <label>Tôi đồng ý với các
						Chính Sách và Thỏa Thuận Sử Dụng của TaiLieu.VN</label></td>
			</tr>
		</table>

	</form>
</body>
</html>